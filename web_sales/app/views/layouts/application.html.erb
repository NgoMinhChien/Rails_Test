<!DOCTYPE html>
<html>

<head>
  <title>
    <%= yield(:title) %>
  </title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    "application", media: "all", 
    "data-turbolinks-track": "reload" 
  %>
  <%= javascript_include_tag "application", 
    "data-turbolinks-track": "reload" 
  %>
</head>

<body>
  <div class="container-fluid">
    <p class="notice">
      <%= notice %>
    </p>
    <%= render "layouts/header" %>
    <p class="alert">
      <%= alert %>
    </p>
  </div>
  <div class="container">
    <%= yield %>
  </div>
</body>

</html>