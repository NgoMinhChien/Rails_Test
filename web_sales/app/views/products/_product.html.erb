<div class="container">
	<div class="row">
		<div class="col-md-4">
			<div class="ui card">
				<div class="image">
					<img src="<%= product.image %>">
				</div>
				<div class="content">
					<a class="header">
						<%= link_to product.name %>
					</a>
					<div class="description">
						<%= product.description %>
					</div>
				</div>
				<div class="extra content">
					<a>
						<i class="user icon"></i>
						<%= product.price %> VND
					</a>
				</div>
				<% if current_user.nil? || !current_user.admin? %>
					<%= link_to "THÊM VÀO GIỎ HÀNG", 
						order_details_path(order_details: { product_id: product.id, qty: 1 }), 
						method: :post, class: "btn btn-primary" 
					%>
				<% end %>
			</div>
		</div>
	</div>
</div>
<% if current_user.nil? || current_user.admin? %>
<%= link_to  "View", 		product %>
<%= link_to  "Edit", 		edit_product_path(product) %>
<%= link_to  "Delete", 	product, method: :delete, data:{ confirm: "Are you sure?" } %>
<% end %>