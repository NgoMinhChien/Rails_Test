<div class="container">
	<div class="row">
		<div class="col-md-4">
			<div class="ui card">
				<div class="image">
					<img src="<%= product.image %>">
				</div>
				<div class="content">
					<a class="header">
						<%= link_to product.name %>
					</a>
					<div class="description">
						<%= product.description %>
					</div>
				</div>
				<div class="extra content">
					<a>
						<i class="user icon"></i>
						<%= product.price %> VND
					</a>
				</div>
				<% if current_user.nil? || !current_user.admin? %>
					<%= form_for(:order_details, url: order_details_path) do |f| %>
						<%= f.hidden_field 	:product_id, value: product.id %>
						<div>
							<%= f.label 			"Số lượng:" %>
							<%= f.text_field 	:qty, class: "form-control", required: true, value: "1" %>
						</div>
						<div>
							<%= f.submit "THÊM VÀO GIỎ HÀNG", class: "btn btn-primary" %>
						</div>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>
<% if current_user.nil? || current_user.admin? %>
<%= link_to  "View", 		product %>
<%= link_to  "Edit", 		edit_product_path(product) %>
<%= link_to  "Delete", 	product, method: :delete, data:{ confirm: "Are you sure?" } %>
<% end %>